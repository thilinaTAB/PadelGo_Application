<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".common.SelectLocation">

    <View
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:background="@drawable/dash_view"/>

    <FrameLayout
        android:layout_width="351dp"
        android:layout_height="99dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="388dp"
        android:background="@color/TransparentBG">

        <ImageView
            android:layout_width="58dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="-140dp"

            android:src="@drawable/location_ico" />

        <Button
            android:id="@+id/BTN_Kandy"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="70dp"
            android:layout_marginTop="19.5dp"
            android:backgroundTint="#E91E63"
            android:text="Kandy"
            android:textColor="@color/white"
            android:textSize="28sp" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="351dp"
        android:layout_height="99dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="280dp"
        android:background="@color/TransparentBG">

        <ImageView
            android:layout_width="58dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="-140dp"

            android:src="@drawable/location_ico" />

        <Button
            android:id="@+id/BTN_Katugastota"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="70dp"
            android:layout_marginTop="19.5dp"
            android:text="Katugastota"
            android:textColor="@color/white"
            android:backgroundTint="#00BCD4"
            android:textSize="28sp" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="351dp"
        android:layout_height="99dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="172dp"
        android:background="@color/TransparentBG">

        <ImageView
            android:layout_width="58dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="-140dp"

            android:src="@drawable/location_ico" />

        <Button
            android:id="@+id/BTN_Matale"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="70dp"
            android:layout_marginTop="19.5dp"
            android:text="Matale"
            android:textColor="@color/white"
            android:backgroundTint="#9C27B0"
            android:textSize="28sp" />
    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="60.5dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="60.5dp"
        android:textAlignment="center"
        android:text="Select Location"
        android:textColor="@color/white"
        android:textSize="36sp"
        android:textStyle="bold" />




</RelativeLayout>