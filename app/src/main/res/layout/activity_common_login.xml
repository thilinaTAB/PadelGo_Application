<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="40"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".common.Login">

    <ImageView
        android:layout_width="400dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:src="@drawable/logo" />

    <androidx.cardview.widget.CardView
        android:id="@+id/mainView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/login_border"
            android:backgroundTint="#FFE0E0"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="User Login"
                android:textAlignment="center"
                android:textColor="@color/ThemeColor"
                android:textSize="30sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/ETXT_Email"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/login_border"
                android:drawableLeft="@drawable/email_ico"
                android:drawablePadding="8dp"
                android:hint="Email Address"
                android:textColorHint="#A3B4B2"
                android:inputType="textEmailAddress"
                android:padding="8dp"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/ETXT_Password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/login_border"
                android:drawableLeft="@drawable/password_key_ico"
                android:drawablePadding="8dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="8dp"
                android:textColorHint="#A3B4B2"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/TXT_btnForgot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="8dp"
                android:visibility="gone"
                android:text="Forgot your password? Verify now"
                android:textAlignment="center"
                android:textColor="#831111"
                android:textStyle="bold"
                android:textSize="15sp" />

            <Button
                android:id="@+id/BTN_Login"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/ThemeColor"
                android:text="Login"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:cornerRadius="20dp" />

            <TextView
                android:id="@+id/TXT_btnRegister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="8dp"
                android:text="Haven't an Account? Register"
                android:textAlignment="center"
                android:textColor="@color/ThemeColor"
                android:textStyle="bold"
                android:textSize="15sp" />

        </LinearLayout>


    </androidx.cardview.widget.CardView>
</LinearLayout>